{
    "manifest_version": 3,
    "name": "Mes Recherches Sauvegardées Leboncoin",
    "description": "Liste vos recherches sauvegardées Leboncoin",
    "version": "1.0.0",
    "author": "@shevabam",
    "homepage_url": "https://github.com/shevabam/extension-leboncoin-recherches-sauvegardees",
    "permissions": [
        "scripting",
        "activeTab",
        "notifications"
    ],
    "host_permissions": [
        "http://leboncoin.fr/*",
        "https://leboncoin.fr/*"
    ],
    "action": {
        "default_icon" : "img/icon_default.png",
        "default_popup": "popup.html",
        "default_title": "Ouvrir mes recherches sauvegardées Leboncoin"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "icons": {
        "128" : "img/icon_128.png"
    }
}